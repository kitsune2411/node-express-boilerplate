{
  "name": "node-express-boilerplate",
  "version": "1.0.0",
  "description": "A production-ready Express.js 5 boilerplate with security, error handling, Swagger docs, database utilities, JWT, and standardized API responses.",
  "main": "src/server.js",
  "type": "commonjs",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "keywords": [
    "express",
    "boilerplate",
    "swagger",
    "api",
    "nodejs",
    "mysql",
    "postgresql",
    "jwt",
    "eslint",
    "prettier"
  ],
  "author": "Agung Kristiawan <agungkristiawan24@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitsune2411/node-express-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/kitsune2411/node-express-boilerplate/issues"
  },
  "homepage": "https://github.com/kitsune2411/node-express-boilerplate#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "ms": "^2.1.3",
    "mysql2": "^3.14.1",
    "pg": "^8.16.3",
    "sqlstring": "^2.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3"
  }
}
